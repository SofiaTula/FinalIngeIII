{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:mocked": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit-mocked",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --testResultsProcessor=jest-junit --maxWorkers=2"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.2.0",
    "jest-junit": "^16.0.0"
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  },
  "jest": {
    "testEnvironment": "./jest.env.js",
    "setupFiles": ["./jest.setup.js"],
    "transform": {},
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js",
      "!jest.setup.js"
    ],
    "coverageReporters": ["text", "lcov", "cobertura"],
    "coverageThreshold": {
      "global": { "branches": 70, "functions": 70, "lines": 70, "statements": 70 }
    },
    "testMatch": ["**/*.test.js"],
    "verbose": true,
    "testTimeout": 10000
  }
}
